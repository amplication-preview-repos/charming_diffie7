datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tag {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  name      String?
  noteTags  NoteTag[]
  updatedAt DateTime  @updatedAt
}

model Note {
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  noteTags  NoteTag[]
  title     String?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model NoteTag {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  note      Note?    @relation(fields: [noteId], references: [id])
  noteId    String?
  tag       Tag?     @relation(fields: [tagId], references: [id])
  tagId     String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  notes     Note[]
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
